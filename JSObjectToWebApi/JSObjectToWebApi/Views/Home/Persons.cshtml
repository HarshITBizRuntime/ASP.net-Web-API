<!doctype html>
<html lang="en">
<head>
    <title>js obj to web api</title>
</head>
<body>
    <script type="text/javascript">
        $("#Save").click(function () {
            var Persons =
                {
                    Id: "0",
                    Name: $("#Name").val(),
                    Price: $("#Price").val(),
                    Category: $("#Category").val()
                };

            if (Persons.Name != "" && Persons.Price != "" && Persons.Category != "")
            {
                var DTO = JSON.stringify(Persons);
                $.ajax({
                    url: 'api/Person',
                    cache: false,
                    //type: 'Post',
                    contentType: 'application/json; charset=utf-8',
                    data: DTO,
                    dataType: "json",
                    success: function (data) {
                        alert('added');
                    }
                }).fail(
                    function (xhr, textStatus, err) {
                        alert(err);
                    });
            }
            else {
                alert('Please Enter All the Values !!');
            }

        });

    </script>
    <div>
        <div>
            <h2>Add New Persons</h2>
        </div>
        <div>
            <label for="name">Name</label>
            <input type="text" id="Name" title="Name" />
        </div>

        <div>
            <label for="category">Category</label>
            <input type="text" id="Category" title="Category" />
        </div>

        <div>
            <label for="price">Price</label>
            <input type="text" id="Price" title="Price" />
        </div>
        <br />
        <div>
            <button id="Save">Save</button>
            <button id="Reset">Reset</button>
        </div>
    </div>

</body>
</html>
